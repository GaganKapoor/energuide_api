{
  "name": "nrcan_api",
  "version": "1.0.0",
  "description": "The NRCAN Engerguide API",
  "main": "index.js",
  "author": "Mike Williamson <mike.williamson@tbs-sct.gc.ca>",
  "license": "MIT",
  "scripts": {
    "test": "jest src",
    "integration": "jest test/",
    "start": "node dist/index.js",
    "build": "babel src --copy-files --out-dir dist",
    "dockerize": "yarn build && docker build -t cdssnc/nrcan_api .",
    "dbg": "node --inspect-brk node_modules/jest/bin/jest.js",
    "extract": "lingui extract",
    "compile": "lingui compile",
    "precommit": "lint-staged",
    "lint": "eslint src/**, test/**"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cds-snc/nrcan_api.git"
  },
  "bugs": {
    "url": "https://github.com/cds-snc/nrcan_api/issues"
  },
  "homepage": "https://github.com/cds-snc/nrcan_api",
  "dependencies": {
    "apollo-engine": "^0.8.5",
    "apollo-server-express": "^1.3.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-request-language": "^1.1.15",
    "graphql": "^0.12.3",
    "lingui-i18n": "^1.3.3",
    "mongo-cursor-pagination": "^6.2.0",
    "mongodb": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.1.0",
    "babel-plugin-lingui-transform-js": "^1.0.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "graphql-tools": "^2.18.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lingui-cli": "^1.4.4",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "regenerator-runtime": "^0.11.1",
    "supertest": "^3.0.0"
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "yarn lint",
      "git add"
    ]
  },
  "jest": {
    "verbose": true
  },
  "lingui": {
    "localeDir": "<rootDir>/src/locale",
    "srcPathDirs": [
      "<rootDir>/src"
    ]
  }
}
